<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondoingresardatos"
    tools:context=".Pagar">

    <TextView
        android:id="@+id/textViewP8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/bebas"
        android:text="XXXX"
        android:textColor="@color/ColorPrincipal"
        android:textSize="24sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/textViewP7"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/textViewP7"
        app:layout_constraintTop_toTopOf="@+id/textViewP7" />

    <EditText
        android:id="@+id/editTextNroTarP"
        android:layout_width="200dp"
        android:layout_height="35dp"
        android:layout_weight="1"
        android:background="#80FFFFFF"
        android:ems="10"

        android:inputType="number"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/textViewP8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/textViewP6"
        app:layout_constraintTop_toBottomOf="@+id/editTextCorreoP" />

    <EditText
        android:id="@+id/editTextCorreoP"
        android:layout_width="160dp"
        android:layout_height="35dp"
        android:layout_marginEnd="49dp"
        android:layout_marginRight="49dp"
        android:layout_weight="1"

        android:background="#80FFFFFF"
        android:ems="10"
        android:inputType="number"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/editTextNroTarP"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/textViewP5"
        app:layout_constraintStart_toStartOf="@+id/editTextTelP"
        app:layout_constraintTop_toBottomOf="@+id/editTextTelP" />

    <EditText
        android:id="@+id/editTextTelP"
        android:layout_width="160dp"
        android:layout_height="35dp"
        android:layout_weight="1"
        android:background="#80FFFFFF"
        android:ems="10"

        android:inputType="number"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/editTextCorreoP"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/textViewP4"
        app:layout_constraintTop_toBottomOf="@+id/editTextDirP" />

    <EditText
        android:id="@+id/editTextDirP"
        android:layout_width="160dp"
        android:layout_height="35dp"
        android:layout_weight="1"
        android:background="#80FFFFFF"
        android:ems="10"

        android:inputType="number"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/editTextTelP"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/textViewP3"
        app:layout_constraintTop_toBottomOf="@+id/editTextApeP" />

    <EditText
        android:id="@+id/editTextApeP"
        android:layout_width="160dp"
        android:layout_height="35dp"
        android:layout_marginEnd="48dp"
        android:layout_marginRight="48dp"
        android:layout_weight="1"

        android:background="#80FFFFFF"
        android:ems="10"
        android:inputType="number"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/editTextDirP"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/textViewP2"
        app:layout_constraintStart_toStartOf="@+id/editTextDirP"
        app:layout_constraintTop_toBottomOf="@+id/editTextNomP" />

    <EditText
        android:id="@+id/editTextNomP"
        android:layout_width="160dp"
        android:layout_height="35dp"
        android:layout_marginEnd="48dp"
        android:layout_marginRight="48dp"
        android:layout_weight="1"

        android:background="#80FFFFFF"
        android:ems="10"
        android:inputType="number"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/editTextApeP"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/textViewP"
        app:layout_constraintStart_toStartOf="@+id/editTextApeP"
        app:layout_constraintTop_toBottomOf="@+id/editTextDni" />

    <TextView
        android:id="@+id/textViewP7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="98dp"
        android:fontFamily="@font/bebas"
        android:text="total a pagar: $"
        android:textColor="@color/ColorPrincipal"
        android:textSize="24sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/buttonVolverP"
        app:layout_constraintEnd_toStartOf="@+id/textViewP8"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextNroTarP" />

    <Button
        android:id="@+id/buttonBuscarDNI"
        android:layout_width="wrap_content"
        android:layout_height="41dp"

        android:text="BUSCAR"
        app:layout_constraintBottom_toBottomOf="@+id/editTextDni"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/editTextDni"
        app:layout_constraintTop_toTopOf="@+id/editTextDni" />

    <Button
        android:id="@+id/buttonVolverP"
        android:layout_width="131dp"
        android:layout_height="41dp"

        android:layout_marginBottom="71dp"
        android:text="Volver"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/buttonConfirmarP"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/buttonConfirmarP"
        android:layout_width="131dp"
        android:layout_height="41dp"

        android:text="PAGAR"
        app:layout_constraintBottom_toBottomOf="@+id/buttonVolverP"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/buttonVolverP"
        app:layout_constraintTop_toTopOf="@+id/buttonVolverP" />

    <TextView
        android:id="@+id/textViewP2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/bebas"
        android:text="apellido:"
        android:textColor="@color/ColorPrincipal"
        android:textSize="24sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/textViewP3"
        app:layout_constraintEnd_toStartOf="@+id/editTextApeP"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewP" />

    <TextView
        android:id="@+id/textViewP6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/bebas"
        android:text="NRO TARJETA:"
        android:textColor="@color/ColorPrincipal"
        android:textSize="24sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/textViewP7"
        app:layout_constraintEnd_toStartOf="@+id/editTextNroTarP"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewP5" />

    <TextView
        android:id="@+id/textViewP4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/bebas"
        android:text="telefono:"
        android:textColor="@color/ColorPrincipal"
        android:textSize="24sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/textViewP5"
        app:layout_constraintEnd_toStartOf="@+id/editTextTelP"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewP3" />

    <TextView
        android:id="@+id/textViewP3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/bebas"
        android:text="direccion:"
        android:textColor="@color/ColorPrincipal"
        android:textSize="24sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/textViewP4"
        app:layout_constraintEnd_toStartOf="@+id/editTextDirP"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewP2" />

    <TextView
        android:id="@+id/textViewP5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/bebas"
        android:text="Correo:"
        android:textColor="@color/ColorPrincipal"
        android:textSize="24sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/textViewP6"
        app:layout_constraintEnd_toStartOf="@+id/editTextCorreoP"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewP4" />

    <TextView
        android:id="@+id/textViewP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/bebas"
        android:text="Nombre:"
        android:textColor="@color/ColorPrincipal"
        android:textSize="24sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/textViewP2"
        app:layout_constraintEnd_toStartOf="@+id/editTextNomP"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextDni" />

    <EditText
        android:id="@+id/editTextDni"
        android:layout_width="160dp"
        android:layout_height="50dp"
        android:layout_weight="1"
        android:background="#80FFFFFF"
        android:ems="10"

        android:inputType="number"
        app:layout_constraintBottom_toBottomOf="@+id/textViewP1"
        app:layout_constraintEnd_toStartOf="@+id/buttonBuscarDNI"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/textViewP1"
        app:layout_constraintTop_toTopOf="@+id/textViewP1" />

    <TextView
        android:id="@+id/textViewP1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="49dp"
        android:layout_marginBottom="23dp"
        android:fontFamily="@font/bebas"
        android:text="INGRESE DNI"
        android:textColor="@color/ColorPrincipal"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/textViewP"
        app:layout_constraintEnd_toStartOf="@+id/editTextDni"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewPagar" />

    <TextView
        android:id="@+id/textViewPagar"
        android:layout_width="400dp"
        android:layout_height="50dp"
        android:fontFamily="@font/bebas"
        android:gravity="center"
        android:text="datos de pago"
        android:textColor="@color/ColorPrincipal"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.089" />
</androidx.constraintlayout.widget.ConstraintLayout>