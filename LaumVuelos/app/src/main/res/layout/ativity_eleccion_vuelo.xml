<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/fondovuelogestiones"
        app:layout_constraintStart_toStartOf="parent"
        tools:context=".EfectuarReserva"
        tools:layout_editor_absoluteY="47dp">

        <Button
            android:id="@+id/buttonVolverReserva"
            android:layout_width="96dp"
            android:layout_height="35dp"
            android:layout_marginEnd="72dp"
            android:layout_marginRight="72dp"
            android:layout_marginBottom="16dp"
            android:text="@string/Volver"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.777"
            app:layout_constraintStart_toEndOf="@+id/buttonAVConfirmar"
            app:layout_constraintTop_toBottomOf="@+id/buttonConfirmarSeleccion" />

        <Button
            android:id="@+id/buttonConfirmarSeleccion"
            android:layout_width="131dp"
            android:layout_height="41dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="56dp"
            android:layout_marginRight="56dp"
            android:text="Confirmar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.777"
            app:layout_constraintStart_toEndOf="@+id/buttonAVConfirmar"
            app:layout_constraintTop_toBottomOf="@+id/listaVuelosAElegir" />

        <TextView
            android:id="@+id/textViewReservas1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="56dp"
            android:fontFamily="@font/bebas"
            android:text="@string/tÃ­tulo_reservas"
            android:textColor="@color/ColorPrincipal"
            android:textSize="25sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.161"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textViewReservas2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="36dp"
            android:layout_marginLeft="36dp"
            android:layout_marginTop="180dp"
            android:baselineAligned="false"
            android:fontFamily="@font/bebas"
            android:text="@string/EleccionVuelo"
            android:textColor="@color/ColorPrincipal"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ListView
            android:id="@+id/listaVuelosAElegir"
            android:layout_width="340dp"
            android:layout_height="374dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/borde2"
            android:scrollbarThumbVertical="@drawable/scroll_list_view"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.535"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewReservas2" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>